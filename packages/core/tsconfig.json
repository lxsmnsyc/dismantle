{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "types"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ES2018",
    "useDefineForClassFields": false,
    "declarationMap": true
  }
}